<h1>Lista de Usuarios</h1>
<div id="userSearchInputContainer" class="coolinput">
    <label for="userInputField" class="text">Buscar Usuario:</label>
    <input type="text" placeholder="Escribe el nombre..." id="userInputField" class="input">
</div><br>
<div class="users-container">
    {{#each users}}
        <div class="card">
            <div class="card__img">
                <img src="public\\img\portada.png" alt="Imagen de portada" style="width:100%;height:auto;">
            </div>
            <div class="card__avatar" style="background-image: url('{{profilePicture}}'); background-size: cover; background-position: center center; background-repeat: no-repeat;" alt="Imagen de perfil"></div>
            <div class="card__title">{{fullname}}</div>
            <div class="card__subtitle">{{role}}</div>
            <div class="card__details">
                <p>Email: {{email}}</p>
            </div>
            <div class="card__wrapper">
                <button class="card__btn" onclick="editUser('{{_id}}')">Editar</button>
            </div>
        </div>
    {{/each}}
</div>
